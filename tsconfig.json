{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "lib": [
      "es2019"
    ],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "CommonJS", // without this import is generated instead of require
    "noImplicitReturns": true,
    "outDir": "dist",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "typeRoots": [ "./typings", "./node_modules/@types" ]
  },
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./dist/"
  ]
}
